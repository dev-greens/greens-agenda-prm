name: CI

on:
  push:
  pull_request:

jobs:
  test:
    runs-on: ubuntu-latest

    services:
      postgres:
        image: postgres:16
        env:
          POSTGRES_DB: greens_prm
          POSTGRES_USER: greens
          POSTGRES_PASSWORD: greens
        ports: ["5432:5432"]
        options: >-
          --health-cmd="pg_isready -U greens"
          --health-interval=5s --health-timeout=5s --health-retries=20
      redis:
        image: redis:7
        ports: ["6379:6379"]

    env:
      POSTGRES_DB: greens_prm
      POSTGRES_USER: greens
      POSTGRES_PASSWORD: greens
      POSTGRES_HOST: 127.0.0.1
      POSTGRES_PORT: 5432
      REDIS_URL: redis://127.0.0.1:6379/0
      DJANGO_SECRET_KEY: test
      DJANGO_DEBUG: 0
      DJANGO_ALLOWED_HOSTS: localhost
      CELERY_BROKER_URL: ${{ env.REDIS_URL }}
      CELERY_RESULT_BACKEND: ${{ env.REDIS_URL }}
      DJANGO_PROJECT: greens_scheduler

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"   # mais compatível que 3.13
          cache: "pip"

      - name: Instalar dependências
        run: |
          python -m pip install -U pip
          if [ -f requirements.txt ]; then pip install -r 
requirements.txt; fi
          pip install django celery redis "psycopg[binary]" python-dotenv

      - name: Aplicar migrações e checar projeto
        run: |
          python manage.py migrate --noinput
          python manage.py check

